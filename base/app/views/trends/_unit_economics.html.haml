%table.table.table-bordered
  %thead
    %tr
      %th{colspan:2} Unit Economics (new customers)
      - @months.each do |month|
        %th= mmr_date(month)
  %tbody
    - @mrrs.each do |data| 
      %tr
        %th
        %th
          LTV
          <i class= 'icon-question-sign' rel="clickover" data-content= "#{data[:metric].desc.html_safe}"></i> 
        - data[:trend].monthly.each do |m|
          %td=(data[:metric].is_in_dollar? ? number_to_currency(m[1]) : m[1].to_i)
    - @mrrs.each do |data| 
      %tr
        %th
        %th
          CAC
          <i class= 'icon-question-sign' rel="clickover" data-content= "#{data[:metric].desc.html_safe}"></i> 
        - data[:trend].monthly.each do |m|
          %td=(data[:metric].is_in_dollar? ? number_to_currency(m[1]) : m[1].to_i)
    - @mrrs.each do |data| 
      %tr
        %th
        %th
          LTV to CAC Ratio
          <i class= 'icon-question-sign' rel="clickover" data-content= "#{data[:metric].desc.html_safe}"></i> 
        - data[:trend].monthly.each do |m|
          %td=(data[:metric].is_in_dollar? ? number_to_currency(m[1]) : m[1].to_i)
    - @mrrs.each do |data| 
      %tr.info
        %th
        %th
          Month to recover CAC
          <i class= 'icon-question-sign' rel="clickover" data-content= "#{data[:metric].desc.html_safe}"></i> 
        - data[:trend].monthly.each do |m|
          %td=(data[:metric].is_in_dollar? ? number_to_currency(m[1]) : m[1].to_i)

:javascript
  $('[rel="clickover"]').clickover({ html : true });
