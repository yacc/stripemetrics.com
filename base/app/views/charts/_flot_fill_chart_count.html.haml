%div{:id=> "#{div}", style: "height:#{height}px"}

:javascript

  if($('##{div}').length)
  { 

    var plot = $.plot($('##{div}'),
         [ { 
             data: #{data.as_flot_data(max_data_points)},
             label: "#{data.name}"
            } 
          ]
            , {
           series: {
             lines: { show: true,
                lineWidth: 2,
                fill: true, fillColor: { colors: [ { opacity: 0.5 }, { opacity: 0.2 } ] }
               },
             points: { show: true, 
                 lineWidth: 2 
               },
             shadowSize: 0
           },
           grid: { hoverable: true, 
               clickable: true, 
               tickColor: "#f9f9f9",
               borderWidth: 0
             },
           colors: ["#1BB2E9"],
          xaxis: {
            ticks:#{max_data_points},
            mode:"time",
            timeformat: "%b%y"
          },
          yaxis: {ticks:3, tickDecimals: 0},
         });

    function showTooltip(x, y, contents) {
      $('<div id="tooltip">' + contents + '</div>').css( {
        position: 'absolute',
        display: 'none',
        top: y + 10,
        left: x ,
        'z-index': 1000,
        border: '1px solid #fdd',
        padding: '2px',
        'background-color': '#dfeffc',
        opacity: 0.80
      }).appendTo("body").fadeIn(200);
    }

    var previousPoint = null;
    $('##{div}').bind("plothover", function (event, pos, item) {
      $("#x").text(pos.x.toFixed(2));
      $("#y").text(pos.y.toFixed(2));

        if (item) {
          if (previousPoint != item.dataIndex) {
            previousPoint = item.dataIndex;

            var date = new Date(item.datapoint[0]);
            var fdate = jQuery.datepicker.formatDate('dd M yy',date);

            $("#tooltip").remove();
            var x = item.datapoint[0].toFixed(2),
              y = item.datapoint[1].toFixed(2);

            showTooltip(item.pageX, item.pageY,
                  item.series.label + " at " + fdate + " = " + y);
          }
        }
        else {
          $("#tooltip").remove();
          previousPoint = null;
        }
    });
  
  }