.subnavbar
  .subnavbar-inner
    .container
      %ul.mainnav
        -if user_signed_in? 
          %li{:class => "#{'active' if current_page?(dashboard_path)}"}
            = link_to dashboard_path do
              %i.icon-dashboard
              %span Dashboard
          %li{:class => "#{'active' if current_page?(account_path)}"}
            = link_to account_path do
              %i.icon-user
              %span My Account
        -else
          %li{:class => "#{'active' if current_page?(quickstart_path)}"}
            = link_to quickstart_path do
              %i.icon-home
              %span Quick-start
        %li{:class => "#{'active' if current_page?(faq_path)}"}
          = link_to faq_path do
            %i.icon-pushpin
            %span FAQ
        %li{:class => "#{'active' if current_page?(pricing_path)}"}
          = link_to pricing_path do
            %i.icon-th-large
            %span Pricing Plans
