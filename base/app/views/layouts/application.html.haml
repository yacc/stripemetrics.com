!!!
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : "Stripemetrics"
    %meta{:content => "StripeMetrics: analytics for Stripe", :name => "description"}/
    %meta{:content => "Yacin Bahi", :name => "author"}/
    %meta{content: "StripeMetrics, Stripe, Dashboard, Metrics, Analytics, SaaS, Metrics", name: "keyword"}/
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}/
    %link{href: "http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800&subset=latin,cyrillic-ext,latin-ext", rel: "stylesheet", type: "text/css"}/
    <!-- The HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <link id="ie-style" href="css/ie.css" rel="stylesheet">
    <![endif]-->
    <!--[if IE 9]>
    <link id="ie9style" href="css/ie9.css" rel="stylesheet">
    <![endif]-->
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = render :partial => 'layouts/ga' if Rails.env.production?
    = render 'shared/freshdesk_widget'  
    = csrf_meta_tags
    = yield(:head)
  %body
    = render "layouts/navbar"
    .container-fluid-full    
      .row-fluid
        #sidebar-left.span2
          = render "layouts/menu"
          = render "layouts/javascript_required"
          / = render "layouts/breadcrumb"
          / = render "shared/flash_messages"
        #content.span10
          .row-fluid  
            = yield
    = yield(:modal)
    / = render "layouts/extras"
    = render "layouts/footer"

